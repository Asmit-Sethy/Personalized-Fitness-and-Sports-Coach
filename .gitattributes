# ===========================================
# Git LFS for Large Data Files
# ===========================================

# --- CSV / TSV datasets ---
*.csv filter=lfs diff=lfs merge=lfs -text
*.tsv filter=lfs diff=lfs merge=lfs -text

# --- JSON data dumps ---
*.json filter=lfs diff=lfs merge=lfs -text

# --- Model files (LLM, embeddings, weights) ---
*.bin filter=lfs diff=lfs merge=lfs -text
*.pth filter=lfs diff=lfs merge=lfs -text
*.pt filter=lfs diff=lfs merge=lfs -text
*.ckpt filter=lfs diff=lfs merge=lfs -text
*.onnx filter=lfs diff=lfs merge=lfs -text

# --- Parquet / Feather files ---
*.parquet filter=lfs diff=lfs merge=lfs -text
*.feather filter=lfs diff=lfs merge=lfs -text

# --- Pickle files ---
*.pkl filter=lfs diff=lfs merge=lfs -text
*.pickle filter=lfs diff=lfs merge=lfs -text

# --- Images (if stored for dashboard UI) ---
*.png filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text

# --- Audio / Video ---
*.mp3 filter=lfs diff=lfs merge=lfs -text
*.wav filter=lfs diff=lfs merge=lfs -text
*.mp4 filter=lfs diff=lfs merge=lfs -text

# ===========================================
# Normal Code (Keep in Git)
# ===========================================
*.py text eol=lf
*.sql text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.sh text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# ===========================================
# Notebooks â€” store in Git normally
# (Recommended: track but ignore metadata noise)
# ===========================================
*.ipynb text

# ===========================================
# Ignore LFS for environment/config files
# ===========================================
*.env text
